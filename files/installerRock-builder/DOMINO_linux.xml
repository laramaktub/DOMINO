    <showPostInstallationScriptResult>1</showPostInstallationScriptResult>
    <postInstallationActionList>
        <changePermissions>
            <files>${installdir}/DOMINO_installer_folder/installer_Linux.sh</files>
            <permissions>777</permissions>
        </changePermissions>
        <changePermissions>
            <files>${installdir}/DOMINO_installer_folder/installer_caller_Linux.sh</files>
            <permissions>777</permissions>
        </changePermissions>
        <runProgram>
            <program>${installdir}/DOMINO_installer_folder/installer_caller_Linux.sh</program>
            <programArguments></programArguments>
        </runProgram>
